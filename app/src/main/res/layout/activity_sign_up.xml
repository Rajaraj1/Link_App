<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252424"
    tools:context=".SignUpActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/link" />

    <EditText
        android:id="@+id/edtNameS"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/edt_solid"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/edtEmailS"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="@drawable/edt_solid"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="@+id/edtNameS"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/edtNameS"
        app:layout_constraintTop_toBottomOf="@+id/edtNameS" />

    <EditText
        android:id="@+id/edtPassS"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/edt_solid"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="@+id/edtEmailS"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtEmailS"
        app:layout_constraintTop_toBottomOf="@+id/edtEmailS" />

    <Button
        android:id="@+id/btnLoginS"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:background="@drawable/btn_stroke"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="@+id/btnSignUpS"
        app:layout_constraintStart_toStartOf="@+id/btnSignUpS"
        app:layout_constraintTop_toBottomOf="@+id/btnSignUpS" />

    <Button
        android:id="@+id/btnSignUpS"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_stroke"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="@+id/edtPassS"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/edtPassS"
        app:layout_constraintTop_toBottomOf="@+id/edtPassS" />

</androidx.constraintlayout.widget.ConstraintLayout>